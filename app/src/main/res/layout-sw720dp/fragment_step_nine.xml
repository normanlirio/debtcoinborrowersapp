<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:id="@+id/stepnine_container"
    tools:context="com.debtcoin.debtcoinapp.Fragments.StepNine">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/relative_stepnine_chilccontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <include
            layout="@layout/custom_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView

        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:text="@string/login_info"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"
                android:textSize="@dimen/twentysix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desireduser"
                android:textSize="@dimen/text_720"
                />
            <EditText
                android:maxLength="16"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890."
                android:nextFocusDown="@id/edit_stepnine_pass"
                android:inputType="textFilter"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/edit_stepnine_uname"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/text_720"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/md_white_1000"
                />
            <TextView
                android:textColor="@color/md_white_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_credential_rules_720"
                android:text="@string/username_rules"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desiredpass"
                android:textSize="@dimen/text_720"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinput_stepnine_container"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/md_white_1000"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorTextAppearance="@style/error_appearance"
                >
            <EditText
                android:maxLength="16"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890.@!*"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:lines="1"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/edit_stepnine_pass"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/text_720"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/md_white_1000"
                />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:textColor="@color/md_white_1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_credential_rules_720"
                android:text="@string/password_rules"
                />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/next_button" />
</RelativeLayout>

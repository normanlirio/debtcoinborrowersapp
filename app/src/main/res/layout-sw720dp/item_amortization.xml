<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        >
        <TextView
            android:textSize="@dimen/amortization_text_720"
            android:id="@+id/text_applyloan_item_terms"
            android:padding="5dp"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:text="@string/applyloan_terms"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/amortization_text_720"
            android:id="@+id/text_applyloan_item_duedate"
            android:padding="5dp"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:text="@string/applyloan_duedate"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/amortization_text_720"
            android:id="@+id/text_applyloan_item_amount"
            android:padding="5dp"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:text="@string/applyloan_amount"
            android:background="@drawable/border"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
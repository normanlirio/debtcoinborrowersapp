<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >
    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/img_popup_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_error_black"
            />
        <TextView
            android:id="@+id/text_popup_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARNING!!"
            android:textSize="@dimen/error_popup_600"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/text_popup_message"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="@dimen/error_popup_600"
        android:text="Something went wrong."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="@color/md_white_1000"
        android:id="@+id/button_popup_ok"
        android:textSize="@dimen/error_popup_600"
        android:layout_marginTop="20dp"
        android:background="@drawable/img_next_button_bg"
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <TextView
        android:id="@+id/text_popup_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="@dimen/error_popup_600"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"
     />
</LinearLayout>
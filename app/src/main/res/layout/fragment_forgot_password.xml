<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:id="@+id/relative_forgot_pass_container"
    tools:context="com.debtcoin.debtcoinapp.Fragments.ForgotPassword">
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <include
            layout="@layout/custom_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_forgot_pass_emailcontainer"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/login_forgot_pass_uname"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890."
            android:id="@+id/edit_forgot_pass_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_white_1000"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_normal" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/login_forgot_pass_email"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_normal" />

        <EditText
            android:id="@+id/edit_forgot_pass_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_white_1000"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_normal" />


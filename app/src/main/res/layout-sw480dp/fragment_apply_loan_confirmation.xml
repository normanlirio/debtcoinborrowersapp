<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context="com.debtcoin.debtcoinapp.Fragments.ApplyLoanConfirmation">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loanconfirmation_title"
                android:gravity="center"
                android:textSize="@dimen/twenty"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loanconfirmation_body_1"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_480"

                android:textColor="@color/md_white_1000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loanconfirmation_body_2"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_480"

                android:textColor="@color/md_white_1000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loanconfirmation_body_3"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_480"

                android:textColor="@color/md_white_1000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loanconfirmation_body_4"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/text_480"

                android:textColor="@color/md_white_1000"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
